{
	"apiVersion": 3,
	"name": "mtdev/projects",
	"title": "Proyectos",
	"category": "widgets",
	"icon": "align-wide",
  "supports": {
    "align": false,
    "html": false
  },
  "attributes": {
    "align": {
      "type": "string"
    },
    "category": {
      "type": "number",
      "default": -1
    },
    "order": {
      "type": "string",
			"default": "desc"
		},
		"orderBy": {
      "type": "string",
			"default": "date"
		},
    "numberOfItems": {
      "type": "number",
      "default": 3
    },
    "hasPagination": {
      "type": "boolean",
      "default": false
    },
    "hasFilters": {
      "type": "boolean",
      "default": false
    },
    "inheritQuery": {
      "type": "boolean",
      "default": false
    }
  },
	"editorScript": "file:./index.js",
	"viewScript": "file:./view.js",
	"editorStyle": "file:./style-index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}

